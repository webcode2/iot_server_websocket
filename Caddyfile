iot.codeabs.com {
    reverse_proxy app:3000 {
        # Remove redundant header_up directives (Caddy handles these by default)
        header_up Host {host}
        
        # Configure HTTP/2 frame size
        transport http {
            http2_max_frame_size 65536  # 64KB frame size
            versions h2 1.1             # Enable both HTTP/2 and HTTP/1.1
        }
    }

    # Security headers (optional)
    header {
        Strict-Transport-Security "max-age=31536000;"
        X-Content-Type-Options "nosniff"
    }
}